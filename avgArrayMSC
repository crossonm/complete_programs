
/* Write a program to find average of all elements in an array - Hint - 
sum off all elements/ total number of elements */

function avgArray(givenArray) {
var givenArrayLength = givenArray.length
var sumBucket = 0
for (i=0;i<givenArrayLength;i++){
    sumBucket = sumBucket + givenArray[i]
}
console.log("sum of elements is " + sumBucket)
var avgArray = sumBucket/givenArrayLength
console.log("average of elements in the array is " + avgArray)
}

myArray =[1,2,3,4]
avgArray(myArray)
